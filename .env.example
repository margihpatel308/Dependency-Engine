LLM_MODE=gemini
# If using OpenAI set OPENAI_API_KEY (paste your key below)
OPENAI_API_KEY=
PORT=3000
DATABASE_PATH=./data/tasks.db

# Google Gemini API key (if using Gemini)
GEMINI_API_KEY=

# For local LLM server mode (LLM_MODE=local)
#LOCAL_LLM_URL=http://localhost:5000/api/generate
#LOCAL_LLM_METHOD=POST
LLM_MODE=mock
# Options: mock (default), openai, local
# mock: Returns deterministic sample tasks (no API key needed)
# openai: Uses OpenAI API (requires OPENAI_API_KEY)
# local: Calls a local LLM HTTP server (requires LOCAL_LLM_URL)

# OpenAI Setup: Get key from https://platform.openai.com/api-keys
# Paste your key below (cost: ~$0.001 per request with gpt-4o-mini)
OPENAI_API_KEY=

PORT=3000
DATABASE_PATH=./data/tasks.db

# For local LLM server mode (LLM_MODE=local)
# Example: Ollama on localhost:11434
#LOCAL_LLM_URL=http://localhost:11434/api/generate
#LOCAL_LLM_METHOD=POST
